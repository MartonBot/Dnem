<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.martonbot.dnem.EditActivity">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/box_padding">

            <TextView
                android:id="@+id/label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/done_button"
                android:text="LABEL" />

            <ImageButton
                android:id="@+id/done_button"
                style="@style/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/edit_button"
                android:background="@drawable/background_button_not_done"
                android:src="@drawable/ic_done_white_24dp" />

            <ImageButton
                android:id="@+id/edit_button"
                style="@style/ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit_black_24dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/box_padding"
            android:text="DETAILS" />

        <TextView
            android:id="@+id/latest_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/box_padding"
            android:text="LATEST" />

        <TextView
            android:id="@+id/streak_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/box_padding"
            android:text="STREAK" />


    </LinearLayout>

</RelativeLayout>