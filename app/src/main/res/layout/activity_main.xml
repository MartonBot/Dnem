<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.martonbot.dnem.MainActivity">

    <RelativeLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/add_button"
            android:orientation="vertical"
            android:paddingEnd="@dimen/box_padding"
            android:paddingStart="@dimen/box_padding">

            <TextView
                android:id="@+id/weekday_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Weekday"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_enabled" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Today's date"
                android:textColor="@color/text_enabled" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/add_button"
            style="@style/ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/settings_button"
            android:src="@drawable/ic_add_black_24dp" />

        <ImageButton
            android:id="@+id/settings_button"
            style="@style/ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings_black_24dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_bar"
        android:padding="@dimen/box_padding"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"></ListView>

</RelativeLayout>
